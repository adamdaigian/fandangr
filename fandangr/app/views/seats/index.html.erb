<h1>Listing seats</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Screen</th>
    <th>Theater</th>
    <th>Movie</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @seats.each do |seat| %>
  <tr>
    <td><%= seat.number %></td>
    <td><%= seat.screen_id %></td>
    <td><%= seat.theater_id %></td>
    <td><%= seat.movie_id %></td>
    <td><%= link_to 'Show', seat %></td>
    <td><%= link_to 'Edit', edit_seat_path(seat) %></td>
    <td><%= link_to 'Destroy', seat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

